{# @var craft \craft\web\twig\variables\CraftVariable #}

{% extends "_/layouts/site" %}

{% block inline_css %}
    {{ source ("_/#{entry.type.handle}-critical.min.css", ignore_missing = true) }}
{% endblock %}

{% block content %}

    <article data-router-view="contact" data-handle="{{ entry.type.handle }}">

        <div class="contact-container" data-scroll-section>

            <h1 class="hero-heading">
                {{ entry.title }}
            </h1>

            {% set heroImage = entry.heroImage.one() ?? null %}

            {% if heroImage %}

                <div class="hero-image-container">
                    <div class="hero-image" data-scroll data-scroll-speed="2" data-scroll-position="top">
                        {% include "_/components/picture" with {
                            asset: heroImage,
                            transform: 'base',
                            sizes: sizes ?? '100vw',
                            lazytransition: 'lazyfade'
                        } %}
                    </div>
                </div>

            {% endif %}

        </div>

        {% include "_/components/block-matrix" %}

    </article>

{% endblock %}
